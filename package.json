{
  "name": "mc-server-panel",
  "version": "1.0.0",
  "private": true,
  "description": "Simple Minecraft server control panel (start/stop/logs/commands) for Windows",
  "main": "server/index.js",
  "scripts": {
    "start": "node server/index.js",
    "build:pkg:linux": "pkg --compress GZip -t node18-linux-x64 --out-path dist server/index.js",
    "build:pkg:win": "pkg --compress GZip -t node18-win-x64 --out-path dist server/index.js",
    "build:pkg:all": "npm run build:pkg:linux && npm run build:pkg:win"
  },
  "dependencies": {
    "express": "^4.19.2",
    "socket.io": "^4.8.1"
  },
  "devDependencies": {
    "pkg": "^5.8.1"
  },
  "pkg": {
    "assets": [
      "public/**/*",
      "server/config.json"
    ],
    "outputPath": "dist"
  }
}

